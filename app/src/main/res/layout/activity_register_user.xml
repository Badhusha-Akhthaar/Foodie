    <Button
        android:id="@+id/registerButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:background="@drawable/buttonpink"
        android:text="REGISTER"
        android:textColor="#f5f6fa"
        app:layout_constraintBottom_toTopOf="@+id/registerText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="332dp"
        android:layout_height="46dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/inputtext"
        android:ems="10"
        android:fontFamily="@font/actor"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="332dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/inputtext"
        android:ems="10"
        android:fontFamily="@font/actor"
        android:hint="User Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <EditText
        android:id="@+id/phoneText"
        android:layout_width="332dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/inputtext"
        android:ems="10"
        android:fontFamily="@font/actor"
        android:hint="Contact Number"
        android:inputType="text|phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="332dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/inputtext"
        android:ems="10"
        android:fontFamily="@font/actor"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneText" />

    <RadioGroup
        android:id="@+id/genderRBtnGrp"
        android:layout_width="332dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordText"
        app:layout_constraintVertical_bias="0.274">

        <RadioButton
            android:id="@+id/genderRBtnM"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/sex_selector"
            android:button="@drawable/ic_male_50"
            android:checked="true" />

        <RadioButton
            android:id="@+id/genderRBtnF"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sex_selector"
            android:button="@drawable/ic_female_50"
            android:checked="false"

            />


    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>